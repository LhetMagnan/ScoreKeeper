<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0E1F"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team1b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:fontFamily="sans-serif-medium"
                android:text="Team A" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Score" />

            <TextView
                android:id="@+id/team_a_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:text="0" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Red card" />

            <TextView
                android:id="@+id/team_a_red_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:text="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Yellow card" />

            <TextView
                android:id="@+id/team_a_yellow_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:text="0" />


            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:onClick="addScoreA"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:background="#46A1DB"
                android:text="Add Score" />

            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:onClick="addRedCardA"
                android:background="#46A1DB"
                android:text="Add red card" />

            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:onClick="addYellowCardA"
                android:layout_gravity="center_horizontal"
                android:background="#46A1DB"
                android:text="Add yellow card" />
        </LinearLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="600dp"
            android:background="@android:color/darker_gray"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/team2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:textColor="@android:color/white"
                android:text="Team B " />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Score" />

            <TextView
                android:id="@+id/team_b_score"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:text="0" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Red card" />

            <TextView
                android:id="@+id/team_b_red_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:text="0" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Yellow card" />

            <TextView
                android:id="@+id/team_b_yellow_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="56sp"
                android:layout_marginBottom="24dp"
                android:textColor="@android:color/white"
                android:fontFamily="sans-serif-light"
                android:text="0" />

            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:onClick="addScoreB"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:background="#FF9800"
                android:text="Add Score" />

            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:onClick="addRedCardB"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:background="#FF9800"
                android:text="Add red card" />

            <Button
                android:layout_width="120dp"
                android:layout_height="30dp"
                android:onClick="addYellowCardB"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:background="#FF9800"
                android:text="Add yellow card" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="resetButton"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textAllCaps="true"
            android:text="Reset"
            android:layout_marginStart="160dp" />
    </LinearLayout>
</LinearLayout>

